{
    "$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            ".turbo",
            "node_modules",
            "dist",
            "pnpm-lock.yaml",
            "routeTree.gen.ts",
            ".wrangler"
        ]
    },
    "organizeImports": {
        "enabled": true
    },
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineEnding": "lf"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "correctness": { "noUnusedImports": "warn" }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        },
        "formatter": {
            "indentWidth": 4
        }
    }
}
